<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hzx.ui.CloudDmActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:padding="1dp"
            android:src="@mipmap/ic_1" />

        <TextView
            android:id="@+id/tv_dmAsr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_group_bg"
            android:padding="5dp"
            android:text="这是一个识别结果,这是一个识别结果,这是一个识别结果,这是一个识别结果,这是一个识别结果."
            android:textSize="25dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:padding="1dp"
            android:src="@mipmap/ic_2" />

        <TextView
            android:id="@+id/tv_dmResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_group_bg"
            android:padding="5dp"
            android:text="这是一个对话结果,这是一个对话结果,这是一个对话结果,这是一个对话结果,这是一个对话结果."
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_startDm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:padding="10dp"
            android:textSize="20dp"
            android:text="开启一轮对话"/>
        <Button
            android:id="@+id/btn_stopDm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="20dp"
            android:text="取消"/>
    </LinearLayout>

</LinearLayout>