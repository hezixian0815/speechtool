<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hzx.MainActivity">

    <TextView
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Speech Tool"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp">

        <Button
            android:id="@+id/btn_auth"
            android:padding="10dp"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:onClick="auth"
            android:text="授权"
            tools:ignore="OnClick" />

    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btn_localAsr"
            android:padding="10dp"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:text="本地识别"/>

    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btn_cloudAsr"
            android:padding="10dp"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:text="云端识别"/>

    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_localHotwords"
            android:padding="10dp"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:text="本地热词"/>

    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btn_cloudHotwords"
            android:padding="10dp"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:text="云端热词"/>

    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btn_sspeAndWakeup"
            android:padding="10dp"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:text="前段信号处理 + 唤醒"/>

    </LinearLayout>


</LinearLayout>