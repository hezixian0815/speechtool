        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="麦克风类型:"></TextView>

<!--        <Spinner-->
<!--            android:id="@+id/spinner"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:minWidth="120dp"></Spinner>-->
    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:padding="10dp"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:text="本地识别"/>

    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:padding="10dp"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:text="云端识别"/>

    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center">

        <Button
            android:padding="10dp"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:text="本地热词"/>

    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:padding="10dp"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:text="云端热词"/>

    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:padding="10dp"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:text="前段信号处理 + 唤醒"/>

    </LinearLayout>


